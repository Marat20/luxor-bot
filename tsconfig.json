{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "module": "ESNext",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules"]
}
